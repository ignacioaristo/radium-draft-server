{
  "name": "typescript-server-template",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc && yarn babel",
    "babel": "babel dist -d ./dist/",
    "start:build": "node dist/index.js",
    "start": "nodemon",
    "start:dev": "NODE_ENV=dev nodemon ./src/index.js",
    "start:prod": "NODE_ENV=prod nodemon ./src/index.ts",
    "test": "jest --passWithNoTests",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"./**/*.{ts,test.ts}\"",
    "format": "prettier --write './**/*.{ts,test.ts}' --config ./.prettierrc",
    "lint:fix": "eslint --fix && yarn format",
    "pre-commit": "yarn type-check && yarn lint && yarn test --watchAll=false",
    "prepare": "husky install",
    "seed:dev": "NODE_ENV=dev ts-node seeders/index"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-boom": "^3.0.0",
    "firebase-admin": "^11.4.1",
    "mongoose": "^6.8.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-boom": "^3.0.1",
    "@types/jest": "^28.1.7",
    "@types/node": "^18.7.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.7.4",
    "vercel": "^28.1.0"
  }
}
